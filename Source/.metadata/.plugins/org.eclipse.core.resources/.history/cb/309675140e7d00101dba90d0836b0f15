#ifndef _APP_BUTTON_DEBOUNCE_H_
#define _APP_BUTTON_DEBOUNCE_H_

enum {
	S_BUTTON_RELEASED = 0,
	S_BUTTON_PRESSED
};

typedef uint32_t (*button_state_func_t)(void);

typedef struct button_debounce_t
{
	uint32_t ui32State;
	uint32_t ui32Counter;
	uint32_t ui32SignalToSend;
	button_state_func_t fButtontatus;
};

#endif /* APP_APP_BUTTON_DEBOUNCE_APP_BUTTON_DEBOUNCE_H_ */
