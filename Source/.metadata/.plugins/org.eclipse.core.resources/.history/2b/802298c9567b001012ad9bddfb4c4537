#ifndef _APP_LED7SEG_H_
#define _APP_LED7SEG_H_

#define APP_LED7SEG_SCAN_INTERVAL	20 		//scan led ở 25Hz
#define APP_LED7SEG_BLINK_INTERVAL  1000	//nếu ở chế độ blink, chớp với chu kỳ 1Hz
#define LED7SEG_EVT_NUM				10
enum {
	LED7SEG_OFF = 0,
	LED7SEG_ON
};

enum {
	LED7SEG_0 = 0,
	LED7SEG_1
};

enum {
	S_LED7SEG_OPERATIONAL
};

typedef struct led7seg_fsm_evt_t
		{
			uint32_t	signal;
		}led7seg_fsm_evt_t;

typedef struct app_led7seg_t
{
	uint8_t		ledCode[2];
	uint8_t		currentLed;
	uint8_t		blinkMode;
	uint8_t		ledControl;
}app_led7seg_t;
void app_led7seg_init(void);
void app_led7seg_set_blink_mode();
void app_led7seg_set_normal_mode();
void app_led7seg_set_off_mode();
void app_led7seg_set_data(uint8_t ui8Code[2]);
void app_led7seg_display_temperature(uint16_t temperature) ;

#endif /* APP_APP_LED7SEG_APP_LED7SEG_H_ */
